{
  "compilerOptions": {
    "outDir": "./dist", // Output compiled JS files to `dist/`
    "rootDir": "./", // Set the root directory to the project root (to include `index.ts`)
    "target": "ES6", // Set the target JavaScript version
    "module": "commonjs", // Use CommonJS module resolution
    "esModuleInterop": true
  },
  "include": [
    "index.ts", // Include the entry point `index.ts` outside `src`
    "src/**/*.ts" // Include all `.ts` files inside the `src` folder
  ],
  "exclude": [
    "node_modules" // Exclude `node_modules` from compilation
  ]
}
