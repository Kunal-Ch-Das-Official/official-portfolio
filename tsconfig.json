{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "index.ts"]
}
